{
  "manifest_version": 2,
  "name": "Word Lookup",
  "version": "0.2",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["js/bootstrap.min.js","js/clipboard.min.js","js/forcetk.min.js","js/jquery-1.11.2.min.js","sketch/popup.js","js/contentScript.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net/npm/p5@1.1.4/lib/p5.min.js; object-src 'self'",
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_icon": "img/color.png",
    "default_popup": "index.html",
    "default_title": "Lookup a definition!"
  }
}